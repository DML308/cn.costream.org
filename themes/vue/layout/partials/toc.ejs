<ul class="menu-root">
  <% ['cookbook', 'style-guide'].indexOf(type) === -1 && site.pages.find({type: type}).sort('order').each(function (p) { %>
	<% var fileName = p.path.replace(/^.+?\/([\w-\.]+)\.html/, '$1') %>
    <% if (type === 'guide') { %>
      <% if (fileName === 'index') { %>
        <li><h3>基础</h3></li>
      <% } %>
      <% if (fileName === 'grammar') { %>
      <li><h3>文法手册</h3></li>
      <% } %>
			<% if (fileName === 'team') { %>
      <li><h3>其它</h3></li>
      <% } %>
    <% } %>
    <% if (type === 'api') { %>
      <% if (fileName === 'front-2.1.0') { %>
      <li><h3>前端</h3></li>
      <% } %>
		<% if (fileName === 'back-2.1.1') { %>
      <li><h3>后端</h3></li>
      <% } %>
    <% } %>
    <li>
      <a href="<%- url_for(p.path) %>" class="sidebar-link<%- page.title === p.title ? ' current' : '' %><%- p.is_new ? ' new' : '' %><%- ['文献资料'].indexOf(p.title)!=-1 ? ' check-hide' : '' %>"><%- p.title %></a>
    </li>
  <% }) %>
</ul>
<style>
.check-hide{
  display:none;
}
</style>
